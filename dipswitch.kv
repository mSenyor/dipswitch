

<MainView>:
	orientation: 'vertical'

	TogglesPanel:
		id: toggles
			

	#Label:
	DipSwitchPanel:
		id: binary
		size_hint_y: None
		height: root.height - 300
		#id: binary
		#font_size: 150
		#text: '000000000'
		

<DipSwitchPanel>:

	SingleSwitch:
		id: test
		

	SingleSwitch:
		
	SingleSwitch:
		
	SingleSwitch:
		
	SingleSwitch:
		
	SingleSwitch:
		
	SingleSwitch:
		
	SingleSwitch:
		
	SingleSwitch:

<SingleSwitch>:
	orientation: 'vertical'
	Label:
		id: name
	Switch:		
		id: val

<Switch>:
	canvas.before:
		PushMatrix
		Rotate:
			angle: 90
			origin: self.center
	canvas.after:
		PopMatrix

	
	
<TogglesPanel>:
	Button:
		id: all_up
		size_hint_x: None
		width: 70
		size_hint_y: None
		height: 300
		text: '<'
		font_size: 60
		on_press: panel.all_up()

	MidPanel:
		id: panel
		size_hint_y: None
		height: 300
	Button:
		id: all_down
		size_hint_x: None
		size_hint_y: None
		height: 300
		width: 70
		text: '>'
		font_size: 60
		on_press: panel.all_down()

	#size: self.size
	#pos: self.pos

<MidPanel>:
	orientation: 'vertical'
	UpButtons:
		size_hint_y: None
		height: 70
		Button:
			id: hund_up
			text: '^'
			font_size: 60
			on_press: root.hund_up()
		Button:
			id: ten_up
			text: '^'
			font_size: 60
			on_press: root.tens_up()
		Button:
			id: one_up
			text: '^'
			font_size: 60
			on_press: root.ones_up()

	Label:
		id: address
		text: '001'
		font_size: 180
	DownButtons:
		size_hint_y: None
		height: 70
		Button:
			id: hund_down
			text: 'v'
			font_size: 60
			on_press: root.hund_down()
		Button:
			id: ten_down
			text: 'v'
			font_size: 60
			on_press: root.tens_down()
		Button:
			id: one_down
			text: 'v'
			font_size: 60
			on_press: root.ones_down()


		
