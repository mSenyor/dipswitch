

<MainView>:
	orientation: 'vertical'

	TogglesPanel:
		id: toggles
			

	###TextInput:
		###id: address
		###size_hint_y: None
		###height: 100
		###font_size: 70
		###text: '0'
		###on_text: root.input_to_binary()

	Label:
		id: binary
		font_size: 150
		text: '000000000'
		
<TogglesPanel>:
	Button:
		id: all_up
		size_hint_x: None
		width: 70
		text: '<'
		font_size: 60
		on_press: panel.all_up()

	MidPanel:
		id: panel
	Button:
		id: all_down
		size_hint_x: None
		width: 70
		text: '>'
		font_size: 60
		on_press: panel.all_down()

<MidPanel>:
	orientation: 'vertical'
	UpButtons:
		size_hint_y: None
		height: 70
		Button:
			id: hund_up
			text: '^'
			font_size: 60
			on_press: root.hund_up()
		Button:
			id: ten_up
			text: '^'
			font_size: 60
			on_press: root.tens_up()
		Button:
			id: one_up
			text: '^'
			font_size: 60
			on_press: root.ones_up()

	Label:
		id: address
		text: '500'
		font_size: 180
	DownButtons:
		size_hint_y: None
		height: 70
		Button:
			id: hund_down
			text: 'v'
			font_size: 60
			on_press: root.hund_down()
		Button:
			id: ten_down
			text: 'v'
			font_size: 60
			on_press: root.tens_down()
		Button:
			id: one_down
			text: 'v'
			font_size: 60
			on_press: root.ones_down()


		
